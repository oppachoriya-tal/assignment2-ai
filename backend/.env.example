# Backend Environment Configuration Example
# Copy this file to .env and update values as needed

# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Dynamic URLs (will be set automatically by Docker/Terraform)
API_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3333

# Database Configuration
DATABASE_URL=postgresql://bookreview_user:bookreview_password@postgres:5432/bookreview_db?schema=public
REDIS_URL=redis://redis:6379

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@bookreview.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Ollama AI Configuration
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama2:7b

# External APIs (Optional)
OPENAI_API_KEY=
GOOGLE_BOOKS_API_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Elasticsearch
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_INDEX=books


